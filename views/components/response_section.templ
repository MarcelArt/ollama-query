package components

templ ResponseSection(content string) {
    <div id="response-section" class="mt-6 bg-gray-50 rounded-lg shadow-lg p-4">
        <h3 class="text-lg font-semibold text-gray-800 mb-2">AI Response</h3>
        <p class="text-sm text-gray-600">
            <md-block>
                {content}
            </md-block>
        </p>
    </div>
}